---
import AdminLayout from '@/layouts/AdminLayout.astro';
import MenuView from '@/components/admin/MenuView';
import { getAllFoods, getConfig, getMenu } from '@/firebase/server';
import ConfigView from '@/components/admin/ConfigView';

const menu = await getMenu();
const foods = await getAllFoods();
const config = await getConfig();
---

<AdminLayout title='Admin Section'>
  <ConfigView config={config} client:visible />
  <MenuView menu={menu} foods={foods} client:visible />
</AdminLayout>
