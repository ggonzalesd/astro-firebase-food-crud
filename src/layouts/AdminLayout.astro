---
import AdminHeader from '@/components/app/AdminHeader.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body class='flex h-full min-h-screen w-full'>
    <AdminHeader />
    <main class='flex-grow'>
      <slot />
    </main>
  </body>
</html>
